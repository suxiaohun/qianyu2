<style type="text/css">

  html, body {
    margin: 0 auto;
    width: 100%;
    height: 100%;
  }

  .login-div-sub {
    width: 400px;
    height: 200px;
    margin: 0 auto;
    border: 1px solid grey;
    position: relative;
    top: 150px;
    text-align: center;
  }

  .login-div-sub label {
    display: inline-block;
    width: 60px;
    text-align: right;
  }

  .login-div-sub .error_msg {
    display: inline-block;
    height: 40px;
    color: red;
  }

  .login-div {
    margin: 0 auto;
    border-right: 1px solid grey;
    border-left: 1px solid grey;
    width: 800px;
    height: 100%;
  }

  .login-div li {
    text-decoration: none;
    list-style: none;
  }
</style>

<div class="login-div">

  <div class="login-div-sub">
    <%= form_tag('login', method: 'post') do %>
      <ul>
        <li class="error_msg">
          <%= params[:error] %>
        </li>
        <li class="zmwy-li">
          <label>用户名：</label>
          <%= text_field_tag :username %>
        </li>
        <li class="zmwy-li">
          <label>密码：</label>
          <%= password_field_tag :password %>
        </li>
        <li class="zmwy-li-search">
          <%= submit_tag '登录', :class => 'btn btn-primary' %>
        </li>
      </ul>
    <% end %>
  </div>
</div>


